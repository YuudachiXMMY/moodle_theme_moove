        display: none;
    }

    /* Adjust Left and Right margin for independent HTML sections */
    .py-16 {
        margin-left : -15px;
        margin-right : -15px;
    }
    .py-8 {
        margin-left : -15px;
        margin-right : -15px;
    }

    /* CSS for automatic horizontal scrolling */
    .logo-scroller {
      animation: scrollLogos 30s linear infinite;

      /* Add styles for mobile to prevent page overflow */
      @media (max-width: 767px) { /* Target screens smaller than md breakpoint */
        white-space: nowrap; /* Prevent items from wrapping */
        /* Optionally, adjust flex properties if needed */
        /* flex-wrap: nowrap; is often default with overflow */
      }
    }

    /* Universities Logos */
    @keyframes scrollLogos {
      0% { transform: translateX(0); }
      100% { transform: translateX(-100%); }
    }

    /* Hide the course contents */
    .course-content {
        display : none;
    }

    /* Course Section Title */
    #frontpage-available-course-list h2 {
        font-size: xx-large;
        font-weight: bold;
    }

    /* Adjust show more course button */
    @media (hover: hover) {
        @supports (color:color-mix(in oklab,black,black)) {
            .btn {
